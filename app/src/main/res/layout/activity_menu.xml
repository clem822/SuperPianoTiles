<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/menu">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Niveau Facile"
        android:id="@+id/buttonFacile"
        android:breakStrategy="simple"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/scoreFacile"
        android:layout_gravity="center_horizontal"
        android:drawableTint="#000000"
        android:background="#cac9c9" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Niveau Normal"
        android:id="@+id/buttonNormal"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/scoreNormal"
        android:layout_gravity="center_horizontal"
        android:drawableTint="#000000"
        android:background="#cac9c9" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Niveau Difficile"
        android:id="@+id/buttonDifficile"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/scoreDifficile"
        android:layout_gravity="center_horizontal"
        android:drawableTint="#000000"
        android:background="#cac9c9" />
</LinearLayout>